{
  "manifest_version": 3,
  "name": "SunnySight - AI Repo Analyzer",
  "version": "2.0.1",
  "description": "AI-powered GitHub repository analyzer with technical insights and pain point detection",
  "permissions": [
    "activeTab",
    "storage",
    "downloads",
    "tabs"
  ],
  "host_permissions": [
    "https://github.com/*",
    "https://api.github.com/*",
    "https://api.openai.com/*"
  ],
  "action": {
    "default_popup": "ui/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://github.com/*/*"],
      "js": ["core/content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "options_page": "ui/settings.html",
      "web_accessible_resources": [
        {
          "resources": [
            "legacy/architecture-ui.html",
            "legacy/usecases-ui.html",
            "legacy/dependencies-ui.html",
            "dashboard/dashboard.html",
            "dashboard/dashboard.js",
            "dashboard/dashboard-init.js",
            "dashboard/dashboard-renderer.js",
            "dashboard/dashboard-simple-renderer.js",
            "dashboard/dashboard-view-switcher.js",
            "dashboard/renderers/architecture-view-renderer.js",
            "dashboard/renderers/security-review-renderer.js",
            "dashboard/renderers/security-view-renderer.js",
            "dashboard/renderers/pipeline-view-renderer.js",
            "dashboard/renderers/overview-renderer.js",
            "dashboard/renderers/enhanced-features-renderer.js",
            "dashboard/renderers/pr-review-view-renderer.js",
            "components/ModernDashboardRenderer.js",
            "components/RepoSidebar.js",
            "components/StartHereCard.js",
            "components/TechStackRing.js",
            "components/ArchitectureOrb3D.js",
            "components/SystemMessageExplorer.js",
            "components/AgentGraphPanel.js",
            "components/CodeEditorPanel.js",
            "components/RunRecipeCard.js",
            "components/UseCasePanel.js",
            "components/FolderStructureTree.js",
            "components/AIMLWorkflowPanel.js",
            "utils/deep-code-scanner.js",
            "utils/graph-generator.js",
            "utils/tailwind-utilities.css",
            "ui/styles.css",
            "core/api.js",
            "utils/SemanticKeyFileSelector.js",
            "core/analyzer.js"
          ],
          "matches": ["<all_urls>"]
        }
      ]
}

